<nav class="navbar navbar-expand-lg navbar-light bg-light">
  <a class="navbar-brand" href="/users">NotifyMe</a>
  <button class="navbar-toggler" type="button" data-toggle="collapse" data-target="#navbarNavDropdown" aria-controls="navbarNavDropdown" aria-expanded="false" aria-label="Toggle navigation">
    <span class="navbar-toggler-icon"></span>
  </button>
  <div class="collapse navbar-collapse" id="navbarNavDropdown">
    <ul class="navbar-nav">
      <li class="nav-item">
        <button type="button" class="btn btn-outline-dark">
          <b class="nav-link" href="#">Login Page</b>
        </button>
      </li>
    </ul>
  </div>
</nav>
<main class="container">
  <outer  style="margin-top:50px;" class="mainbox col-md-6 col-md-offset-3 col-sm-8 col-sm-offset-2">
    <div class="panel panel-info" >
      <section style="padding-top:30px" class="panel-body" >
        <div style="display:none" class="alert alert-danger col-sm-12"></div>
        <form method = "post"  class="form-horizontal" role="form" action="login">
          <userid style="margin-bottom: 25px" class="input-group">
            <span class="input-group-addon"><i class="glyphicon glyphicon-user"></i></span>
            <input type="text" class="form-control" name="username" value="" placeholder="username or email">
          </userid>
          <password style="margin-bottom: 25px" class="input-group">
            <span class="input-group-addon"><i class="glyphicon glyphicon-lock"></i></span>
            <input type="password" class="form-control" name="password" placeholder="password">
          </password>
          <div style="margin-top:10px" class="form-group">
            <!-- Button -->
            <div class="col-sm-12 controls">
              <input type="submit" class="btn btn-success" value = "Log In">
            </div>
          </div>
          <signup class="form-group">
            <div class="col-md-12 control">
              <div class="alert alert-warning" role="alert">Don't have an account?
                <a href="/users/signup" class="btn btn-primary" role="button" >Sign Up Here</a>
              </div>
            </div>
          </signup>
        </form>
      </section>

    </div>
  </outer>
</main>
